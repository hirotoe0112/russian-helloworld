---
import Layout from "../layouts/Layout.astro";
import { getCollection } from "astro:content";

type Journal = {
  data: {
    slug: string
    title: string
  }
}

const journals: Journal[] = await getCollection("journals");
---

<Layout>
	<ul class="posts">
    {
      journals.map((post) => (
		<li>
          <p class="title">
            <a href={`/journals/${post.data.slug}/`}>{post.data.title}</a>
          </p>
		</li>
      ))
    }
  </ul>
</Layout>

<style>
  ul {
    margin: 0;
    padding: 0;
    list-style: none;
  }

  ul.posts li {
    padding: 0;
    margin-bottom: 40px;
  }

  ul.posts li p.date {
    margin: 0;
    font-style: italic;
  }

  ul.posts li p.title {
    margin: 0;
    font-size: var(--font-size-lg);
  }
</style>